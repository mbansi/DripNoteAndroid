<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheet"
    >
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etNote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/text_hint_note_detail"
        android:gravity="start"
        android:background="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ivFavoriteNote"
        android:layout_marginTop="@dimen/_29sdp"
        android:layout_marginStart="@dimen/_32sdp"
        android:layout_marginEnd="@dimen/_40sdp"
        android:inputType="textMultiLine"
        android:lines="5"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivExpand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_expand"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="@dimen/_18sdp"
        android:layout_marginTop="@dimen/_21sdp"
        android:clickable="true"
        android:focusable="true"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivFavoriteNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_drop"
        android:layout_marginTop="@dimen/_30sdp"
        app:layout_constraintStart_toStartOf="@id/etNote"
        app:layout_constraintTop_toBottomOf="@id/etNote"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_22sdp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivShow"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/ivFavoriteNote"
        android:layout_marginStart="@dimen/_5sdp"
        app:layout_constraintStart_toEndOf="@id/ivFavoriteNote"
        android:src="@drawable/icon_show"
        app:layout_constraintBottom_toBottomOf="@id/ivFavoriteNote"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivSaveNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivFavoriteNote"
        app:layout_constraintBottom_toBottomOf="@id/ivFavoriteNote"
        android:src="@drawable/icon_add_note"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginEnd="@dimen/_20sdp" />
</androidx.constraintlayout.widget.ConstraintLayout>